    <li><%#= link_to raw("<i class=\"fa fa-anchor\"></i> API 1"), "#", :method => :get %></li>
    <li><%#= link_to raw("<i class=\"fa fa-anchor\"></i> API 2"), "#", :method => :get %></li>
