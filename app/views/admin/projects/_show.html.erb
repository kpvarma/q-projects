<%= flash_message if request.xhr? -%>

<div class="panel panel-default">
  <div class="panel-body" style="height:auto;">
    <div class="pull-left" style="width:30%;">
      <%= edit_image(@project, "logo.image.url", upload_image_link(@project, :logo)) %>
    </div>
    <div class="pull-left ml-10" style="width:65%;">
      <%= theme_panel_heading(@project.name) %>
      <%= theme_panel_sub_heading(@project.client.name, admin_client_path(@project.client)) if @project.client  %>
      <%= theme_panel_description(@project.pretty_url) %>
      <%= theme_panel_description(@project.description, "fs-14 mt-10 text-color-gray") %>
    </div>
    <div class="cl"></div>
  </div>
  <div class="panel-footer">
    <div class="clearfix fs-12 p-5">
      <%= theme_edit_button(edit_admin_project_path(@project)) %>
      <%= theme_delete_button(admin_project_path(@project)) %>
    </div>
  </div>
</div>